{
  "manifest_version": 3,
  "name": "All About Words",
  "version": "1.1",
  "description": "Find meanings, synonyms, and antonyms of selected words.",
  "permissions": ["activeTab", "scripting"],
  "background": {
    "service_worker": "scripts/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["scripts/content.js"]
    }
  ]
}
